@model RecipeSharingApp.Domain.DTOModels.ReviewDTO

@{
    ViewData["Title"] = "Add new review";
}

<div class="container mx-auto max-w-lg mt-8 p-6 bg-white rounded-xl shadow-lg">
    <h2 class="text-3xl font-bold mb-6 text-gray-800">Create New Recipe Collection</h2>

    <form asp-action="AddRating" method="post" class="space-y-4">
        <div class="form-group">
            <input type="hidden" name="RecipeId" value="@Model.RecipeId" />
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="block text-sm font-medium text-gray-700">Rating (0-5)</label>
            <input asp-for="Rating"
                   type="number"
                   min="0"
                   max="5"
                   class="form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            <span asp-validation-for="Rating" class="text-danger text-sm mt-1"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="block text-sm font-medium text-gray-700">Comment</label>
            <input asp-for="Comment" class="form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            <span asp-validation-for="Comment" class="text-danger text-sm mt-1"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger font-medium"></div>

        <div class="pt-4">
            <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out">
                Submit Review
            </button>
        </div>
    </form>
</div>
