@model RecipeSharingApp.Domain.DTOModels.RecipeCollectionDTO

@{
    ViewData["Title"] = "Create New Collection";
}

<div class="container mx-auto max-w-lg mt-8 p-6 bg-white rounded-xl shadow-lg">
    <h2 class="text-3xl font-bold mb-6 text-gray-800">Create New Recipe Collection</h2>

    <form asp-action="Create" method="post" class="space-y-4">
        <div class="form-group">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Collection Name</label>
            <input asp-for="Name" class="form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            <span asp-validation-for="Name" class="text-danger text-sm mt-1"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger font-medium"></div>

        <div class="pt-4">
            <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out">
                Create Collection
            </button>
        </div>
    </form>
</div>
