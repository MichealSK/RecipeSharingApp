@model List<RecipeSharingApp.Domain.Models.RecipeCollection>

@{
    // Retrieve the recipe object passed from the controller via ViewBag
    var recipeToPin = ViewBag.RecipeToPin as RecipeSharingApp.Domain.Models.Recipe;

    ViewData["Title"] = $"Pin {recipeToPin?.Name ?? "Recipe"}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">

    <div class="bg-white p-8 rounded-xl shadow-2xl border border-gray-100">

        <h1 class="text-3xl font-extrabold text-gray-900 mb-6 border-b pb-3">
            Pin Recipe: @recipeToPin?.Name
        </h1>

        @if (recipeToPin != null)
        {
            <div class="mb-6 flex items-center bg-indigo-50 p-4 rounded-lg">
                <img src="@recipeToPin.ImageUrl" alt="@recipeToPin.Name"
                     class="w-16 h-16 object-cover rounded-md mr-4 shadow-md"
                     onerror="this.onerror=null; this.src='https://placehold.co/64x64/E0E7FF/4F46E5?text=Image+Missing';" />
                <div>
                    <p class="text-lg font-semibold text-indigo-700">Choose a Collection</p>
                    <p class="text-sm text-indigo-500">
                        You are pinning this recipe to one of your personal collections.
                    </p>
                </div>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <!-- Start of the form that posts back to the HTTP POST PinRecipe action -->
            <form asp-action="PinRecipe" method="post" asp-route-recipeId="@recipeToPin?.Id">
                @* This is essential for MVC security *@
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label for="collectionId" class="block text-sm font-medium text-gray-700 mb-2">
                        Select Collection:
                    </label>
                    <select id="collectionId" name="collectionId" required
                            class="mt-1 block w-full pl-3 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg rounded-lg shadow-sm">

                        <option value="" disabled selected>-- Select a Collection --</option>

                        @foreach (var collection in Model)
                        {
                            <option value="@collection.Id">
                                @collection.Name (@(collection.Recipes?.Count() ?? 0) recipes)
                            </option>
                        }
                    </select>
                </div>

                <div class="flex justify-end space-x-3 mt-8">
                    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipeToPin?.Id"
                       class="btn btn-secondary bg-gray-200 text-gray-800 hover:bg-gray-300 font-bold py-2 px-4 rounded-lg transition duration-150">
                        Cancel
                    </a>
                    <button type="submit"
                            class="btn btn-primary bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition duration-150">
                        <i class="fas fa-thumbtack mr-2"></i> Pin Recipe
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-8 border border-dashed border-red-300 bg-red-50 rounded-lg">
                <p class="text-xl font-medium text-red-800">No collections found!</p>
                <p class="text-sm text-red-600 mt-2">You must create a collection before you can pin a recipe.</p>
                <div class="mt-4">
                    <a asp-action="Create" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
                        Create New Collection
                    </a>
                </div>
            </div>
        }
    </div>
</div>
